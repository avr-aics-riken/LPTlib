# for OpenMPI
FC       = env OMPI_FC=gfortran OMPI_F77=gfortran mpif90
FFLAGS   = -g -O2 -march=native
CC       = env OMPI_CC=gcc mpicc
CCFLAGS  = -g -O2 -march=native
CXX      = env OMPI_CXX=g++ mpicxx
CXXFLAGS = $(CCFLAGS) -I./
LINKER   = $(CXX)
LDFLAGS  = 
AR       = ar rc
